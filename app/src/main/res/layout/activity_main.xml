<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="326dp"
            android:layout_height="42dp"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/welcome"
            app:layout_constraintVertical_bias="0.039" android:textSize="18sp"/>
    <TextView
            android:layout_width="263dp"
            android:layout_height="105dp" android:id="@+id/hello"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:textSize="36sp" android:layout_marginTop="24dp"
            android:textStyle="bold" android:gravity="center"/>
    <TextView
            android:text="The current sound degree is:"
            android:layout_width="287dp"
            android:layout_height="58dp" android:id="@+id/textView2"
            android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/welcome" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:textSize="18sp"/>
    <Switch
            android:text="Block roomate's network"
            android:layout_width="338dp"
            android:layout_height="26dp" android:id="@+id/switch1"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="76dp"
            app:layout_constraintHorizontal_bias="0.493"/>
    <TextView
            android:layout_width="266dp"
            android:layout_height="32dp" android:id="@+id/textView3"
            android:layout_marginTop="47dp"
            app:layout_constraintTop_toBottomOf="@+id/hello" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:textSize="18sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>